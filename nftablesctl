#!/bin/sh

set -e
type nft > /dev/null

if [ $EUID -ne 0 ]
then
	echo "Only root can run this script" >&2
	exit 1
fi

if [ ! -d /etc/nftables ]
then
	echo "Rules directory /etc/nftables does not exist" >&2
	exit 1
fi

usage() {
	echo "USAGE: $0 start|stop|restart|list"
    echo
    echo "       $0 start     load the rules"
    echo "       $0 stop      flush the rules"
    echo "       $0 restart   reload the rules"
    echo "       $0 list      list the loaded rules"
    echo
    echo "Using --confirm in the following manner will prompt you to check if"
    echo "your network connection is working fine:"
    echo
    echo "       $0 start --confirm"
    echo "       $0 restart --confirm"
}

ctrl_c() {
	echo
	echo "nftables rules successfully applied"
	exit 0
}

nft_clear_table() {
	nft flush table $1 $2
	nft list table $1 $2 | awk '/^[ \t]+chain/{ print $2 }' | xargs -r -L 1 nft delete chain $1 $2
}

nft_delete_table() {
	nft_clear_table $1 $2
	if nft list table $1 $2 > /dev/null
	then
		nft delete table $1 $2
	fi
}

nft_clear_protocol() {
	for T in $(nft list tables $1 | cut -d ' ' -f 2)
	do
		nft_delete_table $1 $T
	done
}

nft_list_protocol() {
	for T in $(nft list tables $1 | cut -d ' ' -f 2)
	do
		nft list table $1 $T
	done
}

nftables_start() {
	find /etc/nftables -maxdepth 1 -type f -name '*.rules' -print0 | \
		sort -z | xargs --null --no-run-if-empty --max-args=1 nft -f

	if [ -t 0 ] && [ "$1" == "--confirm" ]
	then
		echo "Please check networking connection and press Ctrl+C on success"
		trap ctrl_c INT

		sleep 20

		echo "No response, flushing rules"
		nftables_stop
	fi
}

nftables_list() {
	for P in ip ip6 arp bridge
	do
		nft_list_protocol $P
	done
}

nftables_stop() {
	for P in ip ip6 arp bridge
	do
		nft_clear_protocol $P
	done
}

nftables_restart() {
	nftables_stop
	nftables_start $1
}

case $1 in
	start)
		nftables_start $2
		;;

	stop)
		nftables_stop
		;;

	restart)
		nftables_restart $2
		;;

	list)
		nftables_list
		;;

	*)
		usage
		exit 1
		;;
esac
